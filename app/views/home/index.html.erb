      </div>
    <div class="col-md-4">
      <p class="products">Recentley Added Products</p>
      <% if @products_most_recent.any? %>
        <ul>
          <% @products_most_recent.each do |most_recent| %>

            <li><%= link_to most_recent.name, product_path(most_recent) %></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no recent products added.</p>
      <% end %>

<%# //-------------Locally Made prodcuts--------------------------> %>

    </div>
    <div class="col-md-4">
      <p class="products_local">Locally Made Products</p>
