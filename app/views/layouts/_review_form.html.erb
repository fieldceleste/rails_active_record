<div class = "review_form">
<%= render "layouts/errors", :object => @review %>


<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
   <%= f.label :content_body %>
  <%= f.text_field :content_body  %>
   <%= f.label :rating %>
  <%= f.text_field :rating %>
  <div>
  <%= f.collection_check_boxes :product_ids, Product.all, :id, :name %> 
  </div>
  <p><%= f.submit %></p>
<% end %>
</div>